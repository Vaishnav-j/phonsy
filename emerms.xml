<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vaishnavj.phonesy.Acemersms">

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Sent Emergency SMS"
        android:background="#ffffff"/>

    <EditText
        android:id="@+id/ph1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/per1"
        android:layout_alignParentRight="true"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:gravity="center"
        android:hint="Number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/ph2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/per2"
        android:layout_alignBottom="@+id/per2"
        android:layout_alignLeft="@+id/ph1"
        android:layout_alignParentRight="true"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:gravity="center"
        android:hint="Number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/ph3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/per3"
        android:layout_alignLeft="@+id/ph2"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="Number"
        android:inputType="phone"
        android:gravity="center"
        android:background="@drawable/edittextstyle"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:text="Save" />

    <EditText
        android:id="@+id/per3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="45dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Person3" />

    <EditText
        android:id="@+id/per1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/per2"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="46dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Person1" />

    <EditText
        android:id="@+id/per2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/per3"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="67dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Person2" >

        <requestFocus />
    </EditText>

</RelativeLayout>
